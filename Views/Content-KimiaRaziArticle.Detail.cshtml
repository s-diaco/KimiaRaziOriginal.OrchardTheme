@using Orchard.Utility.Extensions;
@{
    if (Model.Title != null) {
        Layout.Title = Model.Title;
    }

    var title = Model.ContentItem.TitlePart.Title != null ? Model.ContentItem.TitlePart.Title : string.Empty;

    Model.Classes.Add("content-item");

    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
    Model.Classes.Add(contentTypeClassName);
    Model.Classes.Add("col-lg-8");
    Model.Classes.Add("col-lg-offset-2");
    Model.Attributes.Add("id", "home-about");

    var tag = Tag(Model, "article");
}

@tag.StartElement
        @if (title != null)
        {
            <h2 class="text-center">@title</h2>
        }
        @if (Model.ContentItem.BodyPart != null)
        {
            @Display(Model.HomeAboutBody);
        }
@tag.EndElement